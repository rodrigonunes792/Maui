<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftwareShow.Contagem.MApp.Pages.ConfigDetailPage"
             Title="SettingsPage" Loaded="ConfigDetailPage_Loaded">

    <ScrollView Margin="0,10,0,0">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ImageButton Grid.Row="0" Grid.Column="0" x:Name="ImageButtonClose" Source="x.svg" HeightRequest="25" WidthRequest="25" Margin="15,5,0,0"
                         Clicked="ImageButtonFechar_Clicked" Aspect="Center"/>
            <Label Grid.Row="0" Grid.Column="1" Text="Configurações" FontFamily="OpenSansRegular" FontSize="19" FontAttributes="Bold"  TextColor="Black" HorizontalOptions="Start" Margin="35,5,0,0"/>
            <Frame Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource EntryFrame }" Margin="10,0,10,0" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                <Entry x:Name="EntryBaseUrl" Style="{StaticResource DefaultEntry}" Placeholder="https://" />
            </Frame>
            <Button Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource DefaultButton}" x:Name="ButtonSalvar" Text="Salvar" VerticalOptions="End" Margin="10,10,10,10" />
        </Grid>
    </ScrollView>

</ContentPage>