<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoftwareShow.Contagem.MApp.Pages.MenuPage"
             xmlns:controls="clr-namespace:SoftwareShow.Contagem.MApp.Controls"
             BackgroundColor="{StaticResource BackgroundColor}"
             Shell.NavBarIsVisible="False"
             Title="Menu">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <controls:StandardHeader Grid.Row="0"
                               Title="Menu"
                               ShowBackButton="True"
                               BackClicked="OnBackClicked" />

        <!-- Content - Apenas o botão -->
        <StackLayout Grid.Row="1" Padding="30" VerticalOptions="Start" HorizontalOptions="Start">

            <!-- Card Iniciar Contagem - Único elemento -->
            <Border BackgroundColor="{StaticResource WhiteColor}"
                    Stroke="#E0E0E0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="30,25"
                    WidthRequest="180"
                    HeightRequest="160"
                    HorizontalOptions="Center">
                
                <Border.Shadow>
                    <Shadow Brush="Gray"
                            Offset="2,4"
                            Radius="8"
                            Opacity="0.3" />
                </Border.Shadow>
                

                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnIniciarContagemTapped" />
                </Border.GestureRecognizers>

                <StackLayout Spacing="12" VerticalOptions="Center">
                    <Image Source="menu"
                           WidthRequest="80"
                           HeightRequest="100"
                           HorizontalOptions="Center" />
                </StackLayout>
                
            </Border>
            
            <Label Text="Iniciar contagem"
                FontSize="14"
                FontAttributes="Bold"
                TextColor="{StaticResource TextColor}"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0,10,0,0" />
        </StackLayout>

        <!-- Loading Overlay - Removido -->

    </Grid>
</ContentPage>