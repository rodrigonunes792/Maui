<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:converters ="clr-namespace:SoftwareShow.Contagem.MApp.Converters"
    >

    <!-- ////////////  Login page styles Inicio /////////////////-->

  

    <!-- Converters -->
    <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />


    <!-- Conversores para ContagemListPage -->
    <converters:BoolToTabBackgroundConverter x:Key="BoolToTabBackgroundConverter" />
    <converters:BoolToTabBorderConverter x:Key="BoolToTabBorderConverter" />
    <converters:BoolToTabTextColorConverter x:Key="BoolToTabTextColorConverter" />
    <converters:BoolToFontAttributesConverter x:Key="BoolToFontAttributesConverter" />
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    <converters:ContagemDateFormatConverter x:Key="ContagemDateFormatConverter" />
    <converters:QuantidadeProdutosConverter x:Key="QuantidadeProdutosConverter" />
    <converters:ContagemStatusColorConverter x:Key="ContagemStatusColorConverter" />
    <converters:ContagemStatusIconConverter x:Key="ContagemStatusIconConverter" />




    <!-- Cores do app -->
    <Color x:Key="PrimaryColor">#333333</Color>
    <Color x:Key="BackgroundColor">white</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#333333</Color>
    <Color x:Key="PlaceholderColor">#999999</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="OnColor">#666cff</Color>
    <Color x:Key="IconColor">#666666</Color>

    <!-- Style para Entry -->
    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="PlaceholderColor" Value="{StaticResource PlaceholderColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- Style para Border dos campos -->
    <Style x:Key="EntryBorderStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="Padding" Value="15,0" />
    </Style>

    <!-- Style para botão de login -->
    <Style x:Key="LoginButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- Style para ImageButton -->
    <Style x:Key="ImageButtonStyle" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="WidthRequest" Value="24" />
        <Setter Property="HeightRequest" Value="24" />
    </Style>

    <!-- Style para títulos principais -->
    <Style x:Key="MainTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
    </Style>

    <!-- Style para subtítulos -->
    <Style x:Key="SubTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
    </Style>

    <!-- Style para texto descritivo -->
    <Style x:Key="DescriptionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource IconColor}" />
    </Style>

    <!-- Style para título do header -->
    <Style x:Key="HeaderTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Style para linha separadora -->
    <Style x:Key="SeparatorLineStyle" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource BorderColor}" />
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!-- ////////////  Login page styles Fim  /////////////////-->


    


    <!-- Estilos tela Seleção de Lojas Inicio  -->
    <Style x:Key="SectionTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="Margin" Value="20,15,20,10" />
    </Style>

    <Style x:Key="SearchEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="PlaceholderColor" Value="{StaticResource PlaceholderColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="45" />
    </Style>

    <Style x:Key="StoreItemStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="Margin" Value="20,5" />
        <Setter Property="Padding" Value="15,12" />
    </Style>

    <!-- Estilos tela Seleção de Lojas Fim  -->






    <!-- Estilos específicos para ContagemListPage Inicio -->
   
    
    <Style x:Key="ContagemItemBorderStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource WhiteColor}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="Padding" Value="15,12" />
        <Setter Property="Margin" Value="0,4" />
    </Style>

    <Style x:Key="ContagemTitleLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style x:Key="ContagemSubtitleLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource IconColor}" />
    </Style>


    <Style x:Key="StatusIconBorderStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="#27AE60" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="WidthRequest" Value="32" />
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="Stroke" Value="Transparent" />
    </Style>

    <Style x:Key="FloatingButtonStyle" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 30" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="Margin" Value="0,0,20,30" />
    </Style>


    <!-- Estilos específicos para ContagemListPage Fim -->


    <Style x:Key="PickerNoBorderStyle" TargetType="Picker">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Style.Triggers>
            <Trigger TargetType="Picker" Property="IsFocused" Value="True">
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
            </Trigger>
            <Trigger TargetType="Picker" Property="IsEnabled" Value="False">
                <Setter Property="TextColor" Value="Gray" />
            </Trigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>
